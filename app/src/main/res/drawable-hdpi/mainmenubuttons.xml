<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape android:shape="rectangle"  >
        <corners
            android:bottomLeftRadius="5dp"
            android:bottomRightRadius="5dp"
            android:topLeftRadius="5dp"
            android:topRightRadius="5dp"
            android:radius="5dp"
            />
        <padding
            android:bottom="0dp"
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"/>
        <solid android:color="#FFFFFF" />
        <size android:height="0dp" android:width="0dp" />
        <gradient
            android:angle="90"
            android:startColor="#2d5972"
            android:centerColor="#a6d9f0"
            android:endColor="#2d5972"
            android:gradientRadius="10"
            />
    </shape>
</item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                android:radius="5dp"
                />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"/>
            <solid android:color="#FFFFFF" />
            <size android:height="0dp" android:width="0dp" />
            <gradient
                android:angle="180"
                android:startColor="#2d5972"
                android:centerColor="#a6d9f0"
                android:endColor="#2d5972"
                android:gradientRadius="10"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                android:radius="5dp"
                />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"/>
            <solid android:color="#FFFFFF" />
            <size android:height="0dp" android:width="0dp" />
            <gradient
                android:angle="180"
                android:startColor="#2d5972"
                android:centerColor="#a6d9f0"
                android:endColor="#2d5972"
                android:gradientRadius="10"
                />
        </shape>
    </item>
</selector>